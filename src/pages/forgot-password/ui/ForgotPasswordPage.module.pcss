.page {
  width: 100%;
  max-width: 34rem;
  padding: var(--spacing-xl);
}

.title {
  margin: 0 0 var(--spacing-sm) 0;
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text);
}

.text {
  margin: 0 0 var(--spacing-lg) 0;
  color: var(--color-text-secondary);
}

.actions {
  display: flex;
  gap: var(--spacing-md);
  align-items: center;
}



/* Focus styles for keyboard navigation */
:focus-visible {
  outline: 2px solid var(--color-border-focus);
  outline-offset: 2px;
}

/* Enhanced focus for high contrast mode */
@media (prefers-contrast: more) {
  :focus-visible {
    outline-width: 3px;
    outline-offset: 3px;
  }
}

/* Remove default focus for mouse users */
:focus:not(:focus-visible) {
  outline: none;
}


